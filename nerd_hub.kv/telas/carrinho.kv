#: import dp kivy.metrics.dp

<ImageButton@ButtonBehavior+Image>:
    allow_stretch: True
    keep_ratio: False

<CarrinhoCard@BoxLayout>:
    produto: None
    remover_callback: None
    
    orientation: 'horizontal'
    size_hint_y: None
    height: dp(120)
    padding: dp(10)
    spacing: dp(12)
    
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [dp(12),]

    # Imagem do produto
    BoxLayout:
        size_hint_x: 0.3
        padding: dp(5)
        
        Image:
            source: root.produto.image if root.produto else ''
            allow_stretch: True
            keep_ratio: True

    # Informações do produto
    BoxLayout:
        orientation: 'vertical'
        size_hint_x: 0.5
        spacing: dp(5)
        
        # Nome do produto em PRETO
        Label:
            text: root.produto.title if root.produto else ''
            font_size: '14sp'
            bold: True
            color: 0, 0, 0, 1
            halign: 'left'
            valign: 'top'
            text_size: self.width, None
            size_hint_y: 0.6
        
        # Preço do produto em VERDE
        Label:
            text: root.produto.price if root.produto else 'R$ 0,00'
            font_size: '16sp'
            bold: True
            color: 0.07, 0.57, 0.38, 1
            halign: 'left'
            valign: 'bottom'
            size_hint_y: 0.4

    # Botão remover
    BoxLayout:
        size_hint_x: 0.2
        padding: dp(5)
        
        Button:
            text: "×"
            font_size: '20sp'
            size_hint: 1, None
            height: dp(40)
            background_normal: ''
            background_color: 1, 0.3, 0.3, 1
            color: 1, 1, 1, 1
            on_release: root.remover_callback(root.produto) if root.remover_callback else None

<CarrinhoScreen>:
    canvas.before:
        Color:
            rgba: 0.85, 0.85, 0.85, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: 0
        spacing: 0

        # HEADER IGUAL AO DA HOME
        BoxLayout:
            size_hint_y: None
            height: dp(60)
            padding: dp(10), 0
            spacing: dp(10)
            canvas.before:
                Color:
                    rgba: 0.07, 0.57, 0.38, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            # BOTÃO NERD HUB (VOLTA PARA HOME)
            Button:
                text: "NERD HUB"
                size_hint_x: None
                width: dp(120)
                background_normal: ''
                background_color: 0, 0, 0, 0  # Transparente
                color: 1, 1, 1, 1
                font_size: '18sp'
                bold: True
                on_release:
                    app.root.transition.direction = "right"
                    app.root.current = "home"

            TextInput:
                hint_text: "Buscar..."
                multiline: False
                background_normal: ''
                background_active: ''
                background_color: 1,1,1,1
                foreground_color: 0,0,0,1
                font_size: '14sp'
                size_hint_x: 1.5
                size_hint_y: None
                height: dp(36)
                padding: [dp(12), dp(10)]
                radius: [dp(8),]
                pos_hint: {'center_y': 0.5}

            BoxLayout:
                size_hint_x: None
                width: dp(80)
                spacing: dp(10)
                padding: 0, dp(12)

                ImageButton:
                    source: 'nerd_hub.kv/imagens/imagens_home/carrinho.png'
                    size_hint: None, None
                    width: dp(25)
                    height: dp(25)
                    on_release:
                        app.root.transition.direction = "left"
                        app.root.current = "carrinho"

                ImageButton:
                    source: 'nerd_hub.kv/imagens/imagens_home/perfil.png'
                    size_hint: None, None
                    width: dp(25)
                    height: dp(25)
                    on_release:
                        app.root.transition.direction = "left"
                        app.root.current = "login"

        # Área de conteúdo principal
        BoxLayout:
            orientation: 'vertical'
            padding: dp(15)
            spacing: dp(15)

            # Título do carrinho
            Label:
                text: 'Meu Carrinho'
                font_size: '22sp'
                bold: True
                color: 0, 0, 0, 1
                size_hint_y: None
                height: dp(40)
                halign: 'center'
                valign: 'middle'
                text_size: self.size

            # Lista de itens do carrinho
            ScrollView:
                do_scroll_x: False
                do_scroll_y: True
                bar_width: dp(4)
                bar_color: 0.07, 0.57, 0.38, 0.7
                bar_inactive_color: 0.07, 0.57, 0.38, 0.3

                GridLayout:
                    id: carrinho_lista
                    cols: 1
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: dp(15)
                    padding: dp(5)

            # Seção de total e finalização
            BoxLayout:
                size_hint_y: None
                height: dp(120)
                orientation: 'vertical'
                spacing: dp(10)
                padding: dp(15)
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [dp(12),]
                
                Label:
                    id: total_label
                    text: 'Total: R$ 0,00'
                    font_size: '20sp'
                    bold: True
                    color: 0.07, 0.57, 0.38, 1
                    halign: 'center'
                    valign: 'middle'
                    text_size: self.size
                
                Button:
                    text: 'FINALIZAR COMPRA'
                    size_hint_y: None
                    height: dp(50)
                    font_size: '16sp'
                    bold: True
                    background_normal: ''
                    background_color: 0.07, 0.57, 0.38, 1
                    color: 1, 1, 1, 1
                    radius: [dp(8),]
                    on_release: app.mostrar_popup("Compra finalizada com sucesso!")